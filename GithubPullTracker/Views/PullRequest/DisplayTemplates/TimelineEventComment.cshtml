@model TimelineEventComment


<div class="main-comment event">
    <a href="@Model.CreatedBy.html_url" target="_blank" class="user">
        <img src="@(Model.CreatedBy.avatar_url)&s=40" class="avatar" />
    </a>
    <div class="comment">
        <div class="header">
            <a href="@Model.Item.html_url" target="_blank">@(Model.CreatedBy.login)</a> commented <time class="timeago" datetime="@Model.CreatedAt.ToString("o")">@Model.CreatedAt.ToString()</time>
        </div>
        <div class="markdown">@Html.Raw(Model.Item.body_html)</div>
    </div>
</div>